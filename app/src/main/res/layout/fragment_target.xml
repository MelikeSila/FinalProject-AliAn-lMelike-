<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true">
        <ImageView
            android:id="@+id/targetPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/setTargetLocationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp"
            android:text="Set Target Location"
            android:background="@color/buttonColor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/takeTargetPhotoButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Target Photo"
            android:layout_below="@+id/setTargetLocationButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/buttonColor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/uploadTargetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/takeTargetPhotoButton"
            android:text="Upload Target"
            android:background="@color/buttonColor"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>
</LinearLayout>
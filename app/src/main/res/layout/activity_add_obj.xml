<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.alianilmelike.finalproject.AddObjActivity"
    android:background="@drawable/aaaa">

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/imageViewColor" />

    <Button
        android:id="@+id/setStartLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Start Location"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/imageContainer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/buttonColor"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/setLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Location"
        android:layout_below="@+id/setStartLocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/buttonColor"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/takePhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setLocation"
        android:text="Take Photo"
        android:background="@color/buttonColor"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/addSubGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/takePhoto"
        android:text="Add Target"
        android:background="@color/buttonColor"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/uploadGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addSubGameButton"
        android:text="Upload Game"
        android:background="@color/buttonColor"/>

</RelativeLayout>
